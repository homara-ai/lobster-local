# Multi-stage build for Lobster AI with R + Bioconductor support
# Optimized for size, security, and reproducibility

# Stage 1: Base image with Python + R + system dependencies
FROM python:3.11-slim as base

# Install system dependencies and R
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    git \
    curl \
    build-essential \
    libhdf5-dev \
    libxml2-dev \
    libxslt-dev \
    libffi-dev \
    libssl-dev \
    libcurl4-openssl-dev \
    ca-certificates \
    locales \
    # R dependencies
    r-base \
    r-base-dev \
    libblas-dev \
    liblapack-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Bioconductor manager
RUN R -e "install.packages('BiocManager', repos='https://cran.rstudio.com/')"

# Install core Bioconductor + CRAN packages for RNA-seq & single-cell workflows
RUN R -e "BiocManager::install(c( \
    'sangerseqR', \
    'SingleCellExperiment', \
    'scater', \
    'scran', \
    'Seurat', \
    'GEOquery', \
    'edgeR', \
    'limma', \
    'DESeq2', \
    'clusterProfiler', \
    'org.Hs.eg.db', \
    'org.Mm.eg.db', \
    'enrichplot' \
), ask=FALSE, update=TRUE)" \
 && R -e "install.packages(c('ggplot2', 'pheatmap'), repos='https://cran.rstudio.com/')"

# Stage 2: Builder stage for Python dependencies
FROM base as builder

WORKDIR /app

COPY requirements.txt .

# Install Python dependencies including rpy2
RUN pip install --user --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --user --no-cache-dir rpy2 && \
    pip install --user --no-cache-dir -r requirements.txt

# Stage 3: Final runtime image
FROM base as runtime

# Create non-root user
RUN useradd -m -u 1000 -s /bin/bash lobster

WORKDIR /app

# Copy Python dependencies from builder
COPY --from=builder /root/.local /home/lobster/.local

# Copy application code
COPY . .

# Install Lobster AI in development mode
RUN pip install -e .

# Create necessary directories
RUN mkdir -p /home/lobster/.lobster /app/data/exports && \
    chown -R lobster:lobster /app /home/lobster/.lobster

# Switch to non-root user
USER lobster

# Environment variables
ENV PATH=/home/lobster/.local/bin:$PATH
ENV PYTHONUNBUFFERED=1
ENV LOBSTER_HOME=/home/lobster/.lobster
ENV R_HOME=/usr/lib/R

VOLUME ["/home/lobster/.lobster"]

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD lobster --version || exit 1

ENTRYPOINT ["lobster"]
CMD ["chat"]

LABEL maintainer="Homara AI <support@homara.ai>"
LABEL description="Lobster AI - Multi-Agent Bioinformatics Analysis System with R + Bioconductor support"
LABEL version="1.0.0"